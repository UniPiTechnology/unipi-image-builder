# This is mmdebstrap customize hook that enables service
# for setting default unipi password

set -eu

TARGET=$1

if test "${MMDEBSTRAP_MODE:-}" = chrootless; then
    systemctl --root "$TARGET" enable unipi-default-password.service
else
    chroot "$TARGET" systemctl enable unipi-default-password.service
fi
